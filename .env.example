# App
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_DEFAULT_LOCALE=sv

# Payload core
PAYLOAD_SECRET=replace-with-a-long-random-string
PAYLOAD_CONFIG_PATH=payload.config.ts

# Database (Neon Postgres)
# Format: postgres://USER:PASSWORD@HOST.neon.tech/DB?sslmode=require
DATABASE_URL=postgresql://user:password@ep-xxxx.eu-central-1.aws.neon.tech/css_webb?sslmode=require

# Optional direct url for scripts/migrations (if used)
DATABASE_URL_DIRECT=

# Optional read-replica url (future scale)
DATABASE_URL_READONLY=

# Email (for Payload admin invites/reset password)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM="Chelsea Supporters Sweden <noreply@chelseasweden.se>"

# Storage / media strategy
# local | vercel-blob | s3
PAYLOAD_MEDIA_ADAPTER=local

# Vercel Blob (optional)
BLOB_READ_WRITE_TOKEN=

# Security / auth
CRON_SECRET=replace-with-random-cron-secret

# Observability (optional)
SENTRY_DSN=

# Revalidation hook secret for ISR invalidation
REVALIDATE_SECRET=replace-with-random-revalidate-secret
