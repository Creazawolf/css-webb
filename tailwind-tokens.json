{
  "theme": {
    "extend": {
      "colors": {
        "chelsea": {
          "blue": {
            "DEFAULT": "#034694",
            "dark": "#022B5C",
            "light": "#0A5BB5"
          }
        },
        "gold": {
          "DEFAULT": "#D4A843",
          "light": "#E8C96A",
          "dark": "#B8912E"
        },
        "match": {
          "win": "#16A34A",
          "draw": "#EAB308",
          "loss": "#DC2626",
          "live": "#DC2626"
        }
      },
      "fontFamily": {
        "heading": ["Inter", "Segoe UI", "system-ui", "-apple-system", "sans-serif"],
        "body": ["Inter", "Segoe UI", "system-ui", "-apple-system", "sans-serif"],
        "mono": ["JetBrains Mono", "Fira Code", "ui-monospace", "monospace"]
      },
      "fontSize": {
        "xs": ["0.75rem", { "lineHeight": "1.5" }],
        "sm": ["0.875rem", { "lineHeight": "1.5" }],
        "base": ["1rem", { "lineHeight": "1.625" }],
        "lg": ["1.125rem", { "lineHeight": "1.6" }],
        "xl": ["1.25rem", { "lineHeight": "1.5" }],
        "2xl": ["1.5rem", { "lineHeight": "1.4" }],
        "3xl": ["1.875rem", { "lineHeight": "1.3" }],
        "4xl": ["2.25rem", { "lineHeight": "1.2" }],
        "5xl": ["3rem", { "lineHeight": "1.1" }],
        "6xl": ["3.75rem", { "lineHeight": "1.0" }]
      },
      "spacing": {
        "18": "4.5rem",
        "88": "22rem",
        "128": "32rem"
      },
      "maxWidth": {
        "content": "1200px",
        "article": "680px"
      },
      "borderRadius": {
        "sm": "4px",
        "DEFAULT": "6px",
        "md": "8px",
        "lg": "12px",
        "xl": "16px",
        "2xl": "20px"
      },
      "boxShadow": {
        "sm": "0 1px 2px rgba(3, 70, 148, 0.05)",
        "DEFAULT": "0 1px 3px rgba(3, 70, 148, 0.08), 0 1px 2px rgba(3, 70, 148, 0.04)",
        "md": "0 4px 6px rgba(3, 70, 148, 0.07), 0 2px 4px rgba(3, 70, 148, 0.04)",
        "lg": "0 10px 15px rgba(3, 70, 148, 0.08), 0 4px 6px rgba(3, 70, 148, 0.03)",
        "xl": "0 20px 25px rgba(3, 70, 148, 0.10), 0 8px 10px rgba(3, 70, 148, 0.04)",
        "gold": "0 4px 14px rgba(212, 168, 67, 0.25)",
        "inner": "inset 0 2px 4px rgba(0, 0, 0, 0.06)"
      },
      "zIndex": {
        "base": "0",
        "raised": "10",
        "dropdown": "20",
        "sticky": "30",
        "overlay": "40",
        "modal": "50",
        "toast": "60",
        "max": "100"
      },
      "screens": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px",
        "2xl": "1536px"
      },
      "transitionDuration": {
        "fast": "150ms",
        "base": "200ms",
        "slow": "300ms",
        "spring": "500ms"
      },
      "transitionTimingFunction": {
        "spring": "cubic-bezier(0.34, 1.56, 0.64, 1)"
      },
      "keyframes": {
        "pulse-live": {
          "0%, 100%": { "opacity": "1" },
          "50%": { "opacity": "0.5" }
        },
        "fade-in": {
          "from": { "opacity": "0" },
          "to": { "opacity": "1" }
        },
        "slide-up": {
          "from": { "opacity": "0", "transform": "translateY(20px)" },
          "to": { "opacity": "1", "transform": "translateY(0)" }
        },
        "slide-in-right": {
          "from": { "transform": "translateX(100%)" },
          "to": { "transform": "translateX(0)" }
        }
      },
      "animation": {
        "pulse-live": "pulse-live 2s ease-in-out infinite",
        "fade-in": "fade-in 300ms ease-out",
        "slide-up": "slide-up 400ms ease-out",
        "slide-in-right": "slide-in-right 300ms ease-out"
      },
      "backgroundImage": {
        "hero-gradient": "linear-gradient(to right, rgba(2, 43, 92, 0.85), rgba(3, 70, 148, 0.4))",
        "card-gradient": "linear-gradient(to bottom right, #034694, #022B5C)",
        "gold-gradient": "linear-gradient(135deg, #D4A843, #E8C96A)"
      },
      "typography": {
        "DEFAULT": {
          "css": {
            "--tw-prose-body": "#334155",
            "--tw-prose-headings": "#0F172A",
            "--tw-prose-lead": "#64748B",
            "--tw-prose-links": "#034694",
            "--tw-prose-bold": "#0F172A",
            "--tw-prose-counters": "#64748B",
            "--tw-prose-bullets": "#D4A843",
            "--tw-prose-hr": "#E2E8F0",
            "--tw-prose-quotes": "#034694",
            "--tw-prose-quote-borders": "#D4A843",
            "--tw-prose-captions": "#64748B",
            "--tw-prose-code": "#034694",
            "a": {
              "textDecoration": "underline",
              "textDecorationColor": "rgba(3, 70, 148, 0.3)",
              "textUnderlineOffset": "3px",
              "&:hover": {
                "textDecorationColor": "#034694"
              }
            },
            "blockquote": {
              "borderLeftColor": "#D4A843",
              "fontStyle": "normal"
            }
          }
        }
      }
    }
  },
  "plugins": [
    "@tailwindcss/typography",
    "@tailwindcss/forms",
    "@tailwindcss/container-queries"
  ]
}
